source 'http://rubygems.org'

gem 'rails', '3.1.3'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

# CIM metamodel
gem 'cim', '>= 1.3'
gem 'sfcc'

# Ruby Wbem (for cimxml and wsman)
gem 'wbem', '>= 0.1.0' #, :git => "https://github.com/kkaempf/ruby-wbem.git"

# Openwsman (for wsman)
#gem 'openwsman' # no gem format yet

# Pagination support for long lists
# gem 'will_paginate'
# Alternative:
gem 'kaminari'

# Database
gem 'sqlite3'

gem 'json'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

# Use jQuery JavaScript lib
gem 'jquery-rails'

# web-app CSS framework
gem 'web-app-theme'
gem 'hpricot'
gem 'ruby_parser'

# Haml to write HTML pages
gem 'haml'
# Generator
gem 'haml-rails'

# Run JavaScript from Ruby
gem 'execjs'
# Use Google V8 as JavaScript engine
gem 'therubyracer'

# To use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# Use unicorn as the web server
# gem 'unicorn'

# Deploy with Capistrano
# gem 'capistrano'

# To use debugger
# gem 'ruby-debug'

