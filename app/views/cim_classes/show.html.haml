.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", cim_classes_path(:model => @model)
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", cim_classes_path
  .content
    .inner
      - @cim_class.attributes.each do |name,value|
      - STDERR.puts "@cim_class #{name}: #{value}"
        %p
          %b
            - case name
              - when "id"
                - next
              - when "cim_model_id"
                - value = CimModel.find(value).name
                - name = "model"
              - when "parent_id"
                - parent_id = value
                - value = CimClass.find(value).name rescue ""
                - name = "parent"

            = t("activerecord.attributes.cim_class.#{name}", :default => t("activerecord.labels.#{name}", :default => name.capitalize ))
            \:
            - case name
              - when "parent"
                = link_to value, cim_class_path(parent_id, :model => @model)
              - else
                = value

