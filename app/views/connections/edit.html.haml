.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", connections_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_connection_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_connection_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Connection
    .inner
      = form_for @connection, :url => connection_path(@connection), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
