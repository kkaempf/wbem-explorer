.group
  = f.label :name, t("activerecord.attributes.connection.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Name of connection
.group
  = f.label :protocol, t("activerecord.attributes.connection.protocol", :default => "Connection protocol"), :class => :label
  = f.radio_button(:protocol, "cimxml")
  = f.label(:protocol_cimxml, "cim/xml")
  = f.radio_button(:protocol, "wsman")
  = f.label(:protocol_wsman, "wsman")
  %span.description Protocol to use
.group
  = f.label :host, t("activerecord.attributes.connection.host", :default => "Host"), :class => :label
  = f.collection_select(:host, Host.all, :id, :name, :prompt => true )
  %span.description Host to connect to
.group
  = f.label :login, t("activerecord.attributes.connection.login", :default => "Login"), :class => :label
  = f.text_field :login, :class => 'text_field'
  %span.description Login name
.group
  = f.label :password, t("activerecord.attributes.connection.password", :default => "Password"), :class => :label
  = f.password_field :password, :class => 'text_field'
  %span.description Password for login
.group
  = f.label :auth_scheme, t("activerecord.attributes.connection.auth_scheme", :default => "Authentication scheme"), :class => :label
  = f.collection_select(:auth_scheme, AuthScheme.all, :id, :scheme, :prompt => true )
  %span.description Scheme to use for authentication
.group
  = f.label :secure, t("activerecord.attributes.connection.secure", :default => "Use https"), :class => :label
  = f.check_box :secure, :class => 'check_box'
  %span.description Check for https
.group
  = f.label :port, t("activerecord.attributes.connection.port", :default => "Port"), :class => :label
  = f.number_field :port, :class => 'number_field'
  %br
  %span.description Connection port
.group
  = f.label :path, t("activerecord.attributes.connection.path", :default => "Path"), :class => :label
  = f.text_field :path, :class => 'text_field'
  %span.description Connection path
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), connections_path, :class => "text_button_padding link_button"
