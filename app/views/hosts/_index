  <tr>
  <% for column in Host.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  <th>&nbsp;&nbsp;&nbsp;</th>
  </tr>
  
<% for host in @hosts %>
  <tr>
  <% for column in Host.content_columns %>
    <td><%=h host.send(column.name) %></td>
  <% end %>
  <td>&nbsp;&nbsp;&nbsp;</td>
    <td><%= link_to 'Details', host_path(host) %>&nbsp;</td>
    <td><%= link_to 'Edit', edit_host_path(host) %>&nbsp;</td>
    <td><%= button_to 'Delete', host_path(host), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

