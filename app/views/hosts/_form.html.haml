.group
  = f.label :name, t("activerecord.attributes.host.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Unique name for host
.group
  = f.label :fqdn, t("activerecord.attributes.host.fqdn", :default => "Fqdn"), :class => :label
  = f.text_field :fqdn, :class => 'text_field'
  %span.description Fully qualified host name or IP address
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), hosts_path, :class => "text_button_padding link_button"
