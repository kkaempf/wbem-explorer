
#view.block
  .secondary-navigation
    %ul.wat-cf
      %li.first{:class=>(@mode=="list"?"active":"")}= link_to "#{t("web-app-theme.list", :default => "List")}", classnames_path(:model=>@model, :mode => :list, :ns => @ns)
      %li{:class=>(@mode=="tree"?"active":"")}= link_to "#{t("web-app-theme.new", :default => "Tree")}", classnames_path(:model=>@model, :mode => :tree, :ns => @ns)
      %li{:class=>((@mode=="graph"&&@layout=="force")?"active":"")}= link_to "#{t("web-app-theme.new", :default => "Graph (force)")}", classnames_path(:model=>@model, :mode => :graph, :layout => :force, :ns => @ns)
      %li{:class=>((@mode=="graph"&&@layout=="tree")?"active":"")}= link_to "#{t("web-app-theme.new", :default => "Graph (tree)")}", classnames_path(:model=>@model, :mode => :graph, :layout => :tree, :ns => @ns)
      %li{:class=>((@mode=="graph"&&@layout=="indented")?"active":"")}= link_to "#{t("web-app-theme.new", :default => "Graph (indented)")}", classnames_path(:model=>@model, :mode => :graph, :layout => :indented, :ns => @ns)
  .content
    - case @mode
    - when "list"
      = render :partial => "index_list", :locals => { :layout => @layout, :model => @model, :controller => @controller, :ns => @ns }
    - when "tree"
      = render :partial => "index_tree", :locals => { :layout => @layout, :model => @model, :controller => @controller, :ns => @ns }
    - when "graph"
      = render :partial => "index_graph", :locals => { :layout => @layout, :model => @model, :controller => @controller, :ns => @ns }
